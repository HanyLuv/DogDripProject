<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_fragment_drip_book_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:id="@+id/btn_fragment_drip_book_page_write"
        android:layout_width="@dimen/btn_write_drip_size"
        android:layout_height="@dimen/btn_write_drip_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_circle_button"
        android:src="@drawable/ic_create_white_24dp"
        android:transitionName="@string/single_shared_object" />

</RelativeLayout>