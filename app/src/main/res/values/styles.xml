<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextDropdownType">
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">@color/color_black_alpha_30</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
    </style>

    <style name="TextDropdownType.Big">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextDropdownType.Medium">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextDropdownType.Small">
        <item name="android:textSize">10dp</item>
    </style>

</resources>
